<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".AboutMeActivity"
    android:padding="3dp"
    android:background="@drawable/bgq">

    <TextView
        android:id="@+id/idatas"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Me"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="#000"/>

    <View
        android:id="@+id/garis"
        android:layout_below="@id/idatas"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="3dp"
        android:background="#00574B"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_item_photo"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ami" />

    <TextView
        android:id="@+id/textnama"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_item_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aminurachma Aisyah Nilatika"/>

    <TextView
        android:id="@+id/textemail"
        android:layout_margin="5dp"
        android:textSize="10sp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textnama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aminurachmaaisyahnilatika@gmail.com"/>

</RelativeLayout>